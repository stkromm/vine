package vine.settings;

import java.io.FileInputStream;
import java.util.Collection;

/**
 * @author Steffen
 *
 */
public class SettingsCollection {
    /**
     * 
     */
    Collection<Setting> settings = null;

    /**
     * @param settings
     */
    public void addSettings(Collection<Setting> settings) {
        if (this.settings == null) {
            this.settings = settings;
        } else {
            this.settings.addAll(settings);
        }
    }

    public void load(FileInputStream reader) {

    }

    public Setting getSetting(String name) {
        if (settings != null) {
            return settings.stream().filter(s -> s.getName().equals(name)).findFirst().get();
        }
        return null;
    }

    public void apply() {
        if (settings != null) {
            settings.stream().forEach(s -> s.apply());
        }
    }

}
