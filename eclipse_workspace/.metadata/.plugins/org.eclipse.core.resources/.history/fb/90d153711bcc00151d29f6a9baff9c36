package vine.gameplay.entity;

import vine.math.Vector3f;

public class NPC extends GameEntity {

    float timer = 0;

    @Override
    public final void update(final float delta) {
        timer += delta;
        if (timer >= 1000) {
            int sign = Math.random() > 0.5 ? -1 : 1;
            int sign2 = Math.random() > 0.5 ? -1 : 1;
            this.velocity.setX(16.f * sign);
            this.velocity.setY(16.f * sign2);

            timer = 0;
            System.out.println(velocity.getX() / (300 * delta));
            if(velocity.getX() / (300 * delta) > Math.abs(0.00001f))
            this.position.add(velocity.getX() / 300 * delta, velocity.getY() / 300 * delta, 0);
        }

    }

    /**
     * @param x
     * @param y
     */
    public void construct(final int x, final int y) {
    }
}
