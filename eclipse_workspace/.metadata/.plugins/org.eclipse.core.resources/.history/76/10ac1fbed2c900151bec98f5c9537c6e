package vine.animation;

import vine.graphics.Texture2D;

public class AnimationClip {
    private final AnimationFrame[] frames;
    private final Texture2D texture;
    private final float duration;

    private int lastFrame = 0;

    public AnimationClip(Texture2D texture, AnimationFrame... frames) {
        super();
        this.frames = frames;
        this.texture = texture;
        duration = frames[frames.length - 1].duration;
    }

    public AnimationFrame getFrame(final float time) {
        if (frames[lastFrame].getDuration() > time) {
            return frames[lastFrame];
        }
        float frameTime = frames[0].getDuration();
        int frameId = 0;
        while (frameTime < time) {
            frameId++;
            frameTime = frames[frameId].getDuration();
        }
        return frames[frameId];
    }

    public float getDuration() {
        return duration;
    }

    public Texture2D getTexture() {
        return texture;
    }
}
