package vine.assets;

class ObservedAsset<A> {

    @FunctionalInterface
    interface AssetRemover {
        public void remove();
    }

    private int refCount;
    private final A asset;
    private final AssetRemover remover;

    public ObservedAsset(A asset, AssetRemover remover) {
        this.asset = asset;
        this.remover = remover;
    }

    final void addReference() {
        refCount++;
    }

    final void removeReference() {
        refCount--;
        if (refCount == 0) {
            remover.remove();
        }
    }

    A getAsset() {
        addReference();
        return asset;
    }
}
