package com.vine.math;

public class Vector3f extends Vectorf implements VectorOperations<Vector3f> {
    private float xElement;
    private float yElement;
    private float zElement;

    public Vector3f(float f, float g, float h) {
        this.xElement = xElement;
        this.yElement = yElement;
        this.zElement = zElement;
    }

    public float getX() {
        return xElement;
    }

    public void setX(float x) {
        this.xElement = x;
    }

    public float getY() {
        return yElement;
    }

    public void setY(float y) {
        this.yElement = y;
    }

    public float getZ() {
        return zElement;
    }

    public void setZ(float z) {
        this.zElement = z;
    }

    @Override
    public boolean equalTo(final Vector3f vector) {
        if (vector == null) {
            return false;
        }
        return Math.abs(vector.getX() - xElement + vector.getY() - yElement + vector.getZ() - zElement) <= 3 * EPSILON;
    }

    public void add(float first, float second, float third) {
        xElement += first;
        yElement += second;
        zElement += third;
    }

    @Override
    public void add(Vector3f vector) {
        if (vector == null) {
            return;
        }
        xElement += vector.getX();
        yElement += vector.getY();
        zElement += vector.getZ();
    }

    @Override
    public strictfp double dot(Vector3f vector) {
        if (vector == null) {
            return 0;
        }
        return Math.sqrt(vector.getX() * xElement + vector.getY() * yElement + zElement * vector.getZ());
    }

    @Override
    public void scale(float factor) {
        xElement *= factor;
        yElement *= factor;
        zElement *= factor;

    }

    @Override
    public double length() {
        return dot(this);
    }

    @Override
    public double getAngle(Vector3f vector) {
        return this.dot(vector) / (this.length() * vector.length());
    }

    public Vector3f cross(Vector3f vector) {
        if (vector == null) {
            return new Vector3f(0, 0, 0);
        }
        return new Vector3f(yElement * vector.getZ() - zElement * vector.getY(),
                zElement * vector.getX() - xElement * vector.getZ(),
                xElement * vector.getY() - yElement * vector.getX());
    }

    @Override
    public void normalize() {
        scale((float) length());
    }

}
