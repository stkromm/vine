package com.vine.math;

import org.junit.Test;

import junit.framework.TestCase;

public class MatrixTest extends TestCase {

    /**
     * A correctly transposed , orthogonal Matrix multiplied with the not
     * transposed Matrix creates the identity matrix.
     */
    @Test
    public void testOrthogonalInversed() {
        Matrix3f matrix = new Matrix3f(1.f, -2.f, 0.f, 0.f, 1.f, 1.f, 2.f, 1.f, 0.f);
        Matrix3f transposed = new Matrix3f(matrix);
        transposed.transpose();
        transposed.rotate(matrix);
        matrix.makeIdentity();
        assertTrue(matrix.equals(transposed));
    }

    /**
     * Tests transpose of Matrix3f.
     */
    public void testTranspose() {
        Matrix3f matrix = new Matrix3f(1.f, 1.f, 1.f, 6.f, 5.f, 4.f, 1.f, 1.f, 0.f);
        Matrix3f transposedMatrix = new Matrix3f(1.f, 6.f, 1.f, 1.f, 5.f, 1.f, 1.f, 4.f, 0.f);
        matrix.transpose();
        assertTrue(matrix.equals(transposedMatrix));
    }

    public static void main(String[] args) {
        junit.swingui.TestRunner.run(MatrixTest.class);
    }
}
