package vine.screen.test;

import static org.junit.Assert.assertTrue;

import org.junit.Before;
import org.junit.Test;

import vine.game.screen.GameScreen;
import vine.game.screen.Screen;
import vine.game.screen.Viewport;
import vine.platform.lwjgl3.GLFWDisplay;
import vine.platform.lwjgl3.GLFWWindow;
import vine.window.Window;
import vine.window.WindowCreationException;

public class ViewportTest {

    Viewport viewport;

    @Before
    public void setup() {
        viewport = new Viewport();
    }

    @Test
    public void testFieldAccess() {
        assertTrue(viewport.getBottomOffset() == 0);
        assertTrue(viewport.getTopOffset() == 0);
        assertTrue(viewport.getRightOffset() == 0);
        assertTrue(viewport.getLeftOffset() == 0);
    }

    @Test
    public void testScreenViewport() {
        Window window = new GLFWWindow();
        try {
            window.init(new GLFWDisplay());
        } catch (WindowCreationException e) {
        }
        window.setWindowSize(1200, 750);
        Screen screen = new GameScreen(window, 0.75f, 1000);
        assertTrue(screen.getViewport().getLeftOffset()== screen.getViewport().getRightOffset());
        assertTrue(screen.getViewport().getLeftOffset()== 125);
    }
}
