package vine.gameplay.component;

/**
 * @author Steffen
 *
 */
public class Sprite extends Component { // NOSONAR

    private float tileWidth = 32;
    private float tileHeight = 64;
    private final float[] vertices = new float[] { 0, 0, 0, 0, tileHeight, 0, tileWidth, tileHeight, 0, tileWidth, 0,
            0, };

    /**
     * @return The vertices array of the sprite.
     */
    public final float[] getVertices() {
        return vertices;
    }

    @Override
    public void construct(int tileWidth, int tileHeight, Texture texture, float texX, float texY) {

    }
}
