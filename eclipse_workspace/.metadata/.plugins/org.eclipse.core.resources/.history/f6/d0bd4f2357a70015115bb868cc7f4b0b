package com.vine.math.geometry;

import com.vine.math.Vector2f;

public class Circle extends Shape {
    Vector2f origin;
    float radius;

    @Override
    public void contains(Vector2f point) {
        if (point == null) {
            return false;
        }
        Vector2f distanceVector = new Vector2f(point.getX() - origin.getX(), point.getY() - origin.getY());
        return Math.abs(distanceVector.length()) <= radius;
    }
}
