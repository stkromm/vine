package vine.platform.lwjgl3;

import java.util.Arrays;
import java.util.logging.Level;
import java.util.logging.Logger;

import vine.application.Application;

/**
 * @author Steffen
 *
 */
public class DesktopApplication extends Application {

    /**
     * @param args
     *            Contains the settings of the game. Contains the startup-level
     *            path, asset path variables, game title, config-file paths,
     *            window and graphic settings.
     */
    public DesktopApplication(String... args) {
        Logger.getGlobal().log(Level.INFO, Arrays.toString(args));
        window = new DesktopWindow();
    }

}
