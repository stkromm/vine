package vine.components;

import vine.entity.GameEntity;

/**
 * @author Steffen
 *
 */
public class Component extends GameEntity { // NOSONAR

    /**
     * 
     */
    protected GameEntity entity;

    /**
     * @return The entity this component is attached to
     */
    public GameEntity getEntity() {
        return entity;
    }

    /**
     * @param entity
     *            the entity this component should be attached to
     */
    public void attachTo(GameEntity entity) {
        this.entity = entity;
    }
}
