package vine.components;

import org.lwjgl.glfw.GLFW;

import vine.event.KeyEvent;
import vine.game.Game;
import vine.input.InputMapper;

/**
 * @author Steffen
 *
 */
public class Sprite extends Component { // NOSONAR

    private float tileWidth = 64;
    private float tileHeight = 64 * Game.getScreen().getAspect();
    private float[] vertices = new float[] { 0, 0, 0, 0, tileHeight, 0, tileWidth, tileHeight, 0, tileWidth, 0, 0, };

    public float[] getVertices() {
        return vertices;
    }
}
