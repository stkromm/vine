package vine.window;

import vine.application.Application;

public interface Window {

    @FunctionalInterface
    interface CloseCallback {
        public void onCloseRequest(long context);
    }

    @FunctionalInterface
    interface FramebufferSizeCallback {
        public void onFramebufferSizeChange(long context, int width, int height);
    }

    @FunctionalInterface
    interface PositionCallback {
        public void onPositionChange(long context, int x, int y);
    }

    @FunctionalInterface
    interface SizeCallback {
        public void onSizeChange(long context, int width, int height);
    }

    int getWidth();

    int getHeight();

    int getPosX();

    int getPosY();

    void setWindowSize(int width, int height);

    void setWindowPosition(int x, int y);

    void setSizeCallback(SizeCallback callback);

    void setPositionCallback(PositionCallback callback);

    void setFramebufferSizeCallback(FramebufferSizeCallback callback);

    void setCloseCallback(CloseCallback callback);

    void setTitle(String title);

    void init(Application app) throws WindowCreationException;

    boolean isResizeable();

    boolean isVisible();

    boolean isFocused();

    boolean isDecorated();

    boolean isIconified();

    boolean requestedWindowClosing();

    void close();

    void dispose();

    void show();

    long getContext();

}