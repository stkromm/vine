package vine.tilemap;

import java.util.HashMap;
import java.util.Map;

import vine.components.Sprite;

public class TileMap {
    public int width = 20;
    public int height = 15;
    public String[] tiles = new String[width * height];
    public final Map<String, Sprite> tileSprites = new HashMap<>();
    public int tileWidth;
    public int tileHeight;

    public void setTile(Sprite sprite, int x, int y) {
        tileSprites.put(sprite.getName(), sprite);
        tiles[y * height + x] = sprite.getName();
    }

    public float[] getVertices() {
        int tileWidth = 64;
        int tileHeight = 64;
        return new float[] { tileWidth * posX, tileHeight * posY, 0.2f, tileWidth * posX,
                tileHeight * posY + tileHeight, 0.2f, tileWidth * posX + tileWidth, tileHeight * posY + tileHeight,
                0.2f, tileWidth * posX + tileWidth, tileHeight * posY, 0.2f, };
    }
}
