package vine.components;

import org.lwjgl.opengl.GL11;

import vine.game.Game;
import vine.graphics.Graphics;

/**
 * @author Steffen
 *
 */
public class Camera extends Component {
    /**
     * @return The projection matrix to render the camera perspective
     */
    public void useCameraProjection() {
        System.out.println("X" + this.entity.getX());
        GL11.glMatrixMode(GL11.GL_PROJECTION);
        GL11.glTranslatef(entity.getX(), entity.getY(), 0 );
        GL11.glPushMatrix();
        GL11.glMatrixMode(GL11.GL_MODELVIEW);
    }

    @Override
    public void onDestroy() {
        this.getScene().cameras.removeCamera(this);
    }
}
