package vine.gameplay.entity;

public class NPC extends GameEntity {

    float timer = 0; 
    @Override
    public final void update(final float delta) {
        timer += delta;
        if(timer >= 1000) {
            int sign = Math.random() > 0.5 ? -1 : 1;
            int sign2 = Math.random() > 0.5 ? -1 : 1;
        this.position.add(sign * 16,sign2 * 16, 0);
        timer = 0;
        }}

    /**
     * @param x
     * @param y
     */
    public void construct(final int x, final int y) {
        this.velocity.setX(1);
        this.velocity.setY(1);
    }
}
