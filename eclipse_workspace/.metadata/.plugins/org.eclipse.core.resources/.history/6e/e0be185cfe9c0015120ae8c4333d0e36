package com.vine.math;

public class Quartion implements QuartionOperations {
    private float pitch;
    private float roll;
    private float yaw;

    protected Quartion() {

    }

    /**
     * Creates an Quartion that represents the given rotation.
     */
    public Quartion(float pitch, float roll, float yaw) {
        this.pitch = pitch;
        this.roll = roll;
        this.yaw = yaw;
    }
}
