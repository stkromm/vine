package vine.input;

public interface Input {
    @FunctionalInterface
    interface ScrollCallback {
        public void scrolled(long context, int key, int scancode, int action, int mods);
    }

    @FunctionalInterface
    interface KeyCallback {
        public void keyPressed(long context, int key, int scancode, int action, int mods);
    }

    void startListenToWindow(long context);

    void setKeyCallback(KeyCallback callback);

    public void pollEvents();

    public boolean isReleaseAction(int action);
}
