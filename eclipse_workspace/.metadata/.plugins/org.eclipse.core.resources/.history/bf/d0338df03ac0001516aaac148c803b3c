package vine.event;

public class MouseButtonEvent extends Event {
    int button;
    int action;
    int mods;
    int x;
    int y;

    public int getButton() {
        return button;
    }

    public int getAction() {
        return action;
    }

    public int getMods() {
        return mods;
    }

    public void setButton(int button) {
        this.button = button;
    }

    public void setAction(int action) {
        this.action = action;
    }

    public void setMods(int mods) {
        this.mods = mods;
    }

    public int getX() {
        return x;
    }

    public int getY() {
        return y;
    }

    public void setX(int x) {
        this.x = x;
    }

    public void setY(int y) {
        this.y = y;
    }

    public MouseButtonEvent(int button, int action, int mods, int x, int y) {
        super();
        this.button = button;
        this.action = action;
        this.mods = mods;
        this.x = x;
        this.y = y;
    }

    @Override
    public Type getType() {
        return Type.MOUSE_BUTTON;
    }

}
