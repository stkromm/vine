package vine.game.screen;

import vine.math.Matrix4f;
import vine.math.Vector2f;

/**
 * @author Steffen
 *
 */
public interface IScreen {

    /**
     * @return The width of the screen in game units.
     */
    public int getWidth();

    /**
     * @return The height of the screen in game units.
     */
    public int getHeight();

    /**
     * @param x
     * @return
     */
    public float worldXCoordToScreenXCoord(float x);

    /**
     * @param y
     * @return
     */
    public float worldYCoordToScreenYCoord(float y);

    /**
     * @return The number of game units that fit into one window pixel.
     */
    public float getUnitsPerPixel();

    public Viewport getViewport();

    public float getAspect();

    public Matrix4f getOrthographicProjection();
}
