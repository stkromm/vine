package vine.assets;

class ObservedAsset<A> {

    @FunctionalInterface
    interface AssetRemover {
        public void remove();
    }

    private int refCount;
    private final A asset;
    private final AssetManager manager;

    public ObservedAsset(A asset, AssetManager manager) {
        this.asset = asset;
        this.manager = manager;
    }

    final void addReference() {
        refCount++;
    }

    final void removeReference() {
        refCount--;
        if (refCount == 0) {
        }
    }

    A getAsset() {
        addReference();
        return asset;
    }

}
