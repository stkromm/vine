package vine.animation;

import java.util.HashMap;
import java.util.Map;

public class AnimationStateManager {
    private Map<String, AnimationState> states = new HashMap<>();
    private float time;

    public AnimationStateManager(AnimationState[] animation) {
        for(AnimationState state  : animation) {
            states.put(animation.getName(), animation);
        }
    }

    public void update(float delta) {
        this.time += delta;
        this.time %= getCurrentAnimation().getDuration();
    }

    public AnimationClip getCurrentAnimation() {
        // TODO Auto-generated method stub
        return null;
    }

    public float[] getCurrentFrame() {
        return getCurrentAnimation().getFrame(time).getUvs();
    }
}
