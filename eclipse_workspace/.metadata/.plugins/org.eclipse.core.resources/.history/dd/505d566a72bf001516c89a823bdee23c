package vine.game;

public class Viewport {
    private int widthOffset;
    private int heightOffset;
    private int originOffsetX;
    private int originOffsetY;

    /**
     * @param posX
     * @param posY
     * @param width
     * @param height
     */
    public void setViewportDimension(int width, int height) {
        this.widthOffset = width;
        this.heightOffset = height;
    }

    public int getWidth() {
        return widthOffset;
    }

    public int getHeight() {
        return heightOffset;
    }

    public int getPosX() {
        return originOffsetX;
    }

    public int getPosY() {
        return originOffsetY;
    }

    public void setWidth(int width) {
        this.widthOffset = width;
    }

    public void setHeight(int height) {
        this.heightOffset = height;
    }

    public void setPosX(int posX) {
        this.originOffsetX = posX;
    }

    public void setPosY(int posY) {
        this.originOffsetY = posY;
    }

}
