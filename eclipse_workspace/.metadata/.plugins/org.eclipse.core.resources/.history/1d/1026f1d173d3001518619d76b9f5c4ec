package vine.tilemap;

public class GridCalculator {

    float[] squadVertices = new float[12];

    public void updateVerticeGridArray(int i, int j, int startX, int startY, int width, float[] vertices) {
        final int index = (i - startX) + (j - startY) * width;
        squadVertices[0] = i * 32.f;
        squadVertices[1] = j * 32.f;
        squadVertices[3] = i * 32.f;
        squadVertices[4] = j * 32.f + 32;
        squadVertices[6] = i * 32.f + 32;
        squadVertices[7] = j * 32.f + 32;
        squadVertices[9] = i * 32.f + 32;
        squadVertices[10] = j * 32.f;
        System.arraycopy(squadVertices, 0, vertices, index * 12, 12);
    }
}
