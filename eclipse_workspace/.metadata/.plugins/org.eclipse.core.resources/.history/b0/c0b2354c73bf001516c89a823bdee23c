package vine.game;

public class Viewport {
    private int rightOffset;
    private int bottomOffset;
    private int leftOffset;
    private int topOffset;

    private int width;
    private int height;

    /**
     * @param width
     * @param height
     */
    public void setViewportDimension(int width, int height) {
        this.width = width;
        this.height = height;

        app.window.setWindowSize(w, h);
        app.graphics.setViewport(0, 0, w, h);
    }
    
    

}
