package vine.animation;

import vine.graphics.Texture2D;

public class AnimationClip {
    AnimationFrame[] frames;
    private Texture2D texture;
    private float duration;

    public AnimationClip(AnimationFrame[] frames, Texture2D texture, float duration) {
        super();
        this.frames = frames;
        this.texture = texture;
        this.duration = duration;
    }

    public AnimationFrame getFrame(float time) {
        float frameTime = 0;
        int frameId = 0;
        while (frameTime < time) {
            frameTime += frames[frameId].getDuration();
            frameId++;
        }
        return frames[frameId];
    }

    public float getDuration() {
        return duration;
    }
}
