package vine.application;

import vine.window.Window;

public class PlatformDependencyResolver {

    public Window getPlatformWindow() {
        try {
            return (Window) ClassLoader.getSystemClassLoader().loadClass("vine.platform.lwjgl3.DesktopWindow")
                    .newInstance();
        } catch (InstantiationException | IllegalAccessException | ClassNotFoundException e) {
            // TODO Auto-generated catch block
            Logger.getGlobal().log(Level.SEVERE, "Auto-generated catch block", e);
            return null;
        }
    }
}
