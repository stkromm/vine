package vine.tilemap;

import java.util.HashMap;
import java.util.Map;

import vine.components.Sprite;

public class TileMap {
    private int width = 20;
    private int height = 15;
    private String[] tiles = new String[width * height];
    private final Map<String, Sprite> tileSprites = new HashMap<>();
    private int tileWidth;
    private int tileHeight;

    public void setTile(Sprite sprite, int x, int y) {
        tileSprites.put(sprite.getName(), sprite);
        tiles[y * height + x] = sprite.getName();
    }
}
