package com.vine.math;

public class Vector3f extends Vectorf implements VectorOperations<Vector3f> {
    private float xele;
    private float yele;
    private float zElement;

    public Vector3f(float f, float g, float h) {
        this.xele = xele;
        this.yele = yele;
        this.zElement = zElement;
    }

    public float getX() {
        return xele;
    }

    public void setX(float x) {
        this.xele = x;
    }

    public float getY() {
        return yele;
    }

    public void setY(float y) {
        this.yele = y;
    }

    public float getZ() {
        return zElement;
    }

    public void setZ(float z) {
        this.zElement = z;
    }

    @Override
    public boolean equalTo(final Vector3f vector) {
        if (vector == null) {
            return false;
        }
        return Math.abs(vector.getX() - xele + vector.getY() - yele + vector.getZ() - zElement) <= 3 * EPSILON;
    }

    public void add(float first, float second, float third) {
        xele += first;
        yele += second;
        zElement += third;
    }

    @Override
    public void add(Vector3f vector) {
        if (vector == null) {
            return;
        }
        xele += vector.getX();
        yele += vector.getY();
        zElement += vector.getZ();
    }

    @Override
    public strictfp double dot(Vector3f vector) {
        if (vector == null) {
            return 0;
        }
        return Math.sqrt(vector.getX() * xele + vector.getY() * yele + zElement * vector.getZ());
    }

    @Override
    public void scale(float factor) {
        xele *= factor;
        yele *= factor;
        zElement *= factor;

    }

    @Override
    public double length() {
        return dot(this);
    }

    @Override
    public double getAngle(Vector3f vector) {
        return this.dot(vector) / (this.length() * vector.length());
    }

    public Vector3f cross(Vector3f vector) {
        if (vector == null) {
            return new Vector3f(0, 0, 0);
        }
        return new Vector3f(yele * vector.getZ() - zElement * vector.getY(),
                zElement * vector.getX() - xele * vector.getZ(),
                xele * vector.getY() - yele * vector.getX());
    }

    @Override
    public void normalize() {
        scale((float) length());
    }

}
