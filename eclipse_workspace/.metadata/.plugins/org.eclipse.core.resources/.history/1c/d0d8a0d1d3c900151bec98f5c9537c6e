package vine.animation;

import vine.graphics.Texture2D;

public class AnimationFrame {
    final float[] uvs;
    final float duration;

    public AnimationFrame(final Texture2D texture, final int texX, final int texY, final int texWidth,
            final int texHeight, float duration) {
        uvs = texture.getUVSquad(texX, texY, texWidth, texHeight);
        this.duration = duration;
    }

    public float[] getUvs() {
        return uvs;
    }

    public float getDuration() {
        return duration;
    }
}
