package com.vine.math;

/**
 * Mathmatical operations and transformation, that every matrix should
 * implement.
 * 
 * @author Steffen
 *
 * @param <M>
 */
public interface MatrixOperations<M extends Matrix> {
    void inverse();

    void add(M matrix);

    void makeIdentity();

    void uniformScale(float scale);

    float determinant();

    void transpose();

    void multiply(M matrix);
}
