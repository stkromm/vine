package main

class FPSManager {
  private var frames: List[Long] = Nil
  private var avgFps = 30L;

  def getFps: Double = {
    frames match {
      case x :: xs => {
        ((avgFps * 0.9) + (x * 0.1)) / 1000000
      }
      case Nil => 0
      case _   => 0
    }
  }

  def tick(duration: Long) {
    if (frames.length >= 100) {
      avgFps = frames.sum / frames.length
      frames = duration :: Nil
    } else {
      frames = duration :: frames
    }
  }
}