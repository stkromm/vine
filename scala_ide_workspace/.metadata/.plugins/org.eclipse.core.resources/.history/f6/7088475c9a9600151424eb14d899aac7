package main

class FPSManager {
  private var frames = List()
  private var avgFps = 30;

  def getFps: Int = {
    frames match {
      case x :: List() => x
      case x :: list => {
        (list.sum / list.length)
      }
      case List() => 0
      case _      => 0
    }
    frames.tail.sum
  }

  def tick(duration: Long) {
    duration :: frames
    if (frames.length > 100) {
      avgFps = (sum frames.tail / frames.tail.length)
      frames = List(duration)
    }
  }
}